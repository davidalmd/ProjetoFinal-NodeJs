extends layout

block content
  .hold-transition.login-page
    .login-box

      // /.login-logo
      .card.card-outline.card-primary
        .card-header.text-center
          a(href="http://localhost:3000").h1|AdminLTE
        .card-body
          p.login-box-msg Sign in to start your session
          form(action='' method='get')
            .input-group.mb-3
              input.form-control(type='email' placeholder='Email')
              .input-group-append
                .input-group-text
                  span.fas.fa-envelope
            .input-group.mb-3
              input.form-control(type='password' placeholder='Password')
              .input-group-append
                .input-group-text
                  span.fas.fa-lock
            .row
              .col-8
                .icheck-primary
                  input#remember(type='checkbox')
                  label(for='remember')
                    | Remember Me

              // /.col
              .col-4
                button.btn.btn-primary.btn-block(type='submit') Sign In

              // /.col
          .social-auth-links.text-center.mt-2.mb-3
            a.btn.btn-block.btn-primary(href='#')
              i.fab.fa-facebook.mr-2
              |  Sign in using Facebook
            a.btn.btn-block.btn-danger(href='#')
              i.fab.fa-google-plus.mr-2
              |  Sign in using Google+

          // /.social-auth-links
          p.mb-1
            a(href='') I forgot my password
          p.mb-0
            a.text-center(href='') Register a new membership

  // jQuery
  script(src='/javascripts/jquery.min.js')
  // Bootstrap 4
  script(src='/javascripts/bootstrap.bundle.min.js')
  // AdminLTE App
  script(src='/javascripts/adminlte.min.js')
  //Font Awesome
  script(src="/javascripts/all.min.js") 
